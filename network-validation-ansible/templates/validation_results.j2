{
{%- for device in ansible_play_hosts -%}
  "{{ device }}": {
    {%- if hostvars[device]['interface_results'] is defined -%}
    "interface_results": {{ hostvars[device]['interface_results'] }},
    {%- endif -%}
    {%- if hostvars[device]['neighbor_results'] is defined -%}
    "neighbor_results": {{ hostvars[device]['neighbor_results'] }},
    {%- endif -%}
    {%- if hostvars[device]['ospf_status_results'] is defined -%}
    "ospf_status_results": {{ hostvars[device]['ospf_status_results'] }},
    {%- endif -%}
    {%- if hostvars[device]['bgp_status_results'] is defined -%}
    "bgp_status_results": {{ hostvars[device]['bgp_status_results'] }},
    {%- endif -%}
  }{{ "," if not loop.last }}
{%- endfor -%}
}